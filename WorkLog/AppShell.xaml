<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkLog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:views="clr-namespace:WorkLog"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkLog">

    <ShellContent
        Title="Hlavní stránka"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Zaměstnanci"
        ContentTemplate="{DataTemplate views:EmployeesPage}"
        Route="EmployeesPage" />

    <ShellContent
        Title="Přidat zaměstnance"
        ContentTemplate="{DataTemplate views:AddEmployeePage}"
        Route="AddEmployeePage" />

    <ShellContent
        Title="Projekty"
        ContentTemplate="{DataTemplate views:ProjectsPage}"
        Route="ProjectsPage" />

    <ShellContent
        Title="Pracovní záznamy"
        ContentTemplate="{DataTemplate views:WorkRecordsPage}"
        Route="WorkRecordsPage" />

    <ShellContent Route="AddWorkRecordPage"     ContentTemplate="{DataTemplate views:AddWorkRecordPage}" />




</Shell>
